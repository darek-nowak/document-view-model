<?xml version="1.0" encoding="utf-8"?>
<resources>
    // application items styles
    <style name="DocumentExtraBigItem">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="DocumentBigItem">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginStart">7dp</item>
    </style>

    <style name="DocumentParagraphItem" parent="DocumentBigItem">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="DocumentItem">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="DocumentHeader">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">7dp</item>
    </style>

    <style name="DocumentInfoItem">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">7dp</item>
    </style>
</resources>